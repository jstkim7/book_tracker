<div class="bookshelf">
  <header>
    Your Bookshelf
  </header>

  <div class="books">
  <section>
    <% @books.each do |book| %>
      <article class="h <%= @colors.next %>"  >
        <%= book.title %></br>
        <%= book.author %>
      </article>
    <% end %>
    <article class="h" id="new-book">
      <svg width="82" height="82">
        <circle cx="41" cy="41" r="40" fill="orange" />
      </svg>
    </article>
  </section>
  <div id="dialog-form" title="Create new book">
    <%= form_for(@book) do |f| %>
      <%= f.label :title %></br>
      <%= f.text_field :title %>
    <% end %>
  </div>
  <script>
    $(function() {
      $( "#dialog-form" ).dialog({
        autoOpen: false,
        show: {
          effect: "blind",
          duration: 500
        },
        hide: {
          effect: "explode",
          duraction: 500
        }
      });

      $( "#new-book" ).click(function() {
        $( "#dialog-form" ).dialog( "open" );
      });
    });
  </script>
</div>
</div>