<div class="bookshelf">
  <header>
    Your Bookshelf
  </header>

  <div class="books">
  <section>
    <% @books.each do |book| %>
      <article class="h <%= @colors.next %>">
        <%= link_to book.title, book_path(book) %></br>
        <%= book.author %>
      </article>
    <% end %>
    <article class="h" id="new-book">
      <svg width="82" height="82">
        <circle cx="41" cy="41" r="40" fill="orange" />
      </svg>
    </article>
  </section>
  <%= render 'books/book_submit_form' %>
</div>
</div>