<div class="bookshelf">
  <header>
    Your Bookshelf
  </header>

  <div class="books">
  <section>
    <% @books.each do |book| %>
      <article class="h <%= @colors.next %>"  >
        <%= book.title %></br>
        <%= book.author %>
      </article>
    <% end %>
    <article class="h" id="new-book">
      <svg width="82" height="82">
        <circle cx="41" cy="41" r="40" fill="orange" />
      </svg>
    </article>
  </section>
  <div id="dialog-form" title="Create new book">
    <%= form_for(@book) do |f| %>
    <p>
      <%= f.label :title %></br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :author %></br>
      <%= f.text_field :author %>
    </p>
    <p>
      <%= f.label :description %></br>
      <%= f.text_area :description, cols: '30', rows: '10' %>
    </p>
    <p>
      <%= f.button %>
    </p>
    <% end %>
  </div>
</div>
</div>